generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_STRING")
}

model Configuration {
  id Int @id @default(autoincrement())
  InventoryNumberprefix String
}

model Asset {
  id Int @id @default(autoincrement())
  // 1 Employee N Assets
  Employee Employee @relation(fields: [EmployeeID], references: [id])
  EmployeeID Int
  
  // Many Assets have one Model
  Model Model @relation(fields: [ModelName], references: [Model])
  ModelName String

  InventoryNumber String @unique
}

model Model {
  id Int @id @default(autoincrement())
  Model String @unique
  // 1 Manufactor many Models
  Manufactor Manufactor @relation(fields: [ManufactorName], references: [Name])
  ManufactorName String
  // N Types 1 Asset
  AssetType AssetType @relation(fields: [AssetTypeName], references: [Type]) 
  AssetTypeName String @unique
  // Asset
  Assets Asset[]
}

model AssetType {
  id Int @id @default(autoincrement())
  Type String @unique

  Models Model?
}

model Manufactor {
  id Int @id @default(autoincrement())
  Name String @unique
  Models Model[]

}

model Employee {
  id Int @id @default(autoincrement())
  FirstName String
  LastName String
  Fullname String
  EMail String @unique
  CreatedAt DateTime @default(now())
  UpdatetAt DateTime @updatedAt
  // 1:N: 1 Building N Employee
  Building Building @relation(fields: [BuildingName], references: [Name])
  BuildingName String
  // 
  Assets Asset[]
}

model Building{
  id Int @id @default(autoincrement())
  Name String @unique
  Employees Employee[]
}